@page "/"
@inherits ProductsBase

@if (Products == null)
{
    <DisplaySpinner/>
}
else
{
    <h3 class="md-5">Products</h3>
    int productsCount = Products.Count();

    @if(productsCount > 0)
    {
        @foreach (var prodGroup in GetGroudProductsBycategory())
        {
            <h4>@GetCategoriName(prodGroup)</h4>
             <div class="row mt-3">
                 <DisplayProducts Products="@prodGroup.Take(4)"></DisplayProducts>
             </div>
             <hr class="mb-3"/>
        }
    }
}
